@{
  Layout = "_Layout";
}

<div class='container'>
    @{
        if (Model.Count == 0)
        {
            <h2>You need to create a Restaurant before you can leave a review!</h2>
            <a href='/restaurants' class='btn btn-lg btn-info'>Add A Restaurant</a>
        }
        else
        {
            <h1>Reviews</h1>
            <div class='button-box'>
                <a href='/reviews/new' class='btn btn-lg btn-info'>
                    <span class='glyphicon glyphicon-plus' aria-hidden="true"></span>
                    Add Review
                </a>
            </div>
            @foreach (var review in Model)
            {
                <div class='panel panel-default'>
                    <div class='panel-body'>
                        <h2>@review.GetRestaurant().Name - @review.Rating star review by <a href='/reviews/@review.Id'>@review.ReviewerName</a></h2>
                    </div>
                </div>
            }
        }
    }
</div>
