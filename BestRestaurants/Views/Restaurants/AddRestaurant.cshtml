@{
  Layout = "_Layout";
}

    <div class='container'>
        <h1>Add Restaurant</h1>
        <form action='/restaurants' method='post'>
            <div class='form-group'>
                <label for='name'><h4>Name</h4></label>
                <input type='text' name='name' class='form-control' required>
            </div>
            <div class='form-group'>
                <label for='price'><h4>Price</h4></label>
                <select name='price' class='form-control' required>
                    <option name="" value="">Select A Price</option>
                    <option name="price" value="$">$ (Affordable)</option>
                    <option name="price" value="$$">$$ (Moderate)</option>
                    <option name="price" value="$$$">$$$ (Expensive)</option>
                    <option name="price" value="$$$$">$$$$ (Very Expensive)</option>
                </select>
            </div>
            <div class='form-group'>
                <label for='cuisine'><h4>Cuisine</h4></label>
                <select name='cuisineId' class='form-control' required>
                    <option name="" value="">Select A Cuisine</option>
                    @foreach (var cuisine in Model)
                    {
                        <option name="cuisineId" value="@cuisine.Id">@cuisine.Name</option>
                    }
                </select>
            </div>
            <button type='submit' class='btn btn-lg btn-default'>Create Restaurant</button>
        </form>
    </div>
