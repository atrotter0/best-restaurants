@{
  Layout = "_Layout";
}

    <div class='container'>
        <h1>Update Restaurant</h1>
        <form action='/restaurants/@Model.Id/update' method='post'>
            <div class='form-group'>
                <label for='name'><h4>Name</h4></label>
                <input type='text' name='name' class='form-control' value="@Model.Name" required>
            </div>
            <div class='form-group'>
                <label for='price'><h4>Price</h4></label>
                <input type='text' name='price' class='form-control' value="@Model.Price" required>
            </div>
            <div class='form-group'>
                <label for='cuisine'><h4>Cuisine</h4></label>
                <select name='cuisineId' class='form-control' required>
                    <option name="" value="">Select A Cuisine</option>
                    @foreach (var cuisine in Model.GetAllCuisines())
                    {
                        <option name="cuisineId" value="@cuisine.Id">@cuisine.Name</option>
                    }
                </select>
            </div>
            <button type='submit' class='btn btn-lg btn-default'>Update Restaurant</button>
        </form>
    </div>
